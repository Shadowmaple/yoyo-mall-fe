/* pages/order/order_info/order_info.wxss */

.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
  /* margin-bottom: 10rpx; */
  border-top: 2rpx solid #95A4A6;
  padding: 10rpx 0;
}

.header-title {
  margin-left: 30rpx;
  font-size: 34rpx;
  color: #E74C3C;
  font-weight: bold;
}

.logis-box {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
  border: 2rpx solid rgb(0, 0, 0, 0.5);
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
}

.logis-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.logis-status {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: rgb(0, 0, 0, 0.8);
}

.logis-button {
  border: 2rpx solid rgb(0, 0, 0, 0.5);
  border-radius: 10rpx;
  padding: 15rpx 15rpx;
  font-size: 26rpx;
  margin-right: 10rpx;
}

.addr-box {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0;
  border: 2rpx solid rgb(0, 0, 0, 0.5);
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
}

.addr-info {
  margin-left: 20rpx;
}

.addr-line1 {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  font-weight: 800;
}

.addr-line2 {
  font-size: 26rpx;
}

.addr-name {
  margin-right: 20rpx;
}

.product-box {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 10rpx 0;
  border: 2rpx solid rgb(0, 0, 0, 0.5);
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
}

.product-item {
  display: flex;
  flex-direction: row;
  margin: 10rpx 10rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgb(0, 0, 0, 0.2);
}

.item-image {
  height: 180rpx;
  width: 150rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  margin-left: 30rpx;
  margin-right: 10rpx;
  width: 70%;
}

.item-line1 {
  margin-top: 10rpx;

  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.item-line2 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.orderInfo-box {
  width: 90%;
  margin: 10rpx 0;
  border: 2rpx solid rgb(0, 0, 0, 0.5);
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
}

.orderInfo-line {
  margin: 15rpx 10rpx;
  font-size: 28rpx;
}

.purchase-box {
  width: 90%;
  margin: 10rpx 0;
  border: 2rpx solid rgb(0, 0, 0, 0.5);
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
  margin-bottom: 150rpx;
}

.purchase-line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 15rpx 10rpx;
  font-size: 28rpx;
}

.purchase-line-payment {
  color: #E74C3C;
  font-size: 34rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: white;
  border-top: 2rpx solid rgb(0, 0, 0, 0.2);
  padding: 10rpx 0;
}

.footer-button {
  border: 2rpx solid rgb(0, 0, 0, 0.5);
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  margin-right: 30rpx;
  background-color: white;
}

.footer-button2 {
  border: 2rpx solid #E74C3C;
  color: white;
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  margin-right: 30rpx;
  background-color: #E74C3C;
}