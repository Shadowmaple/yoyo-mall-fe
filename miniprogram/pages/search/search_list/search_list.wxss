/* pages/search/search_list/search_list.wxss */

.search {
  width: 90%;
  margin: 20rpx 0;
}

.list-box {
  width: 100%;
  margin: 20rpx 0;
}

.item {
  margin: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
}

.item-image {
  height: 280rpx;
  width: 250rpx;
  margin-right: 20rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid rgb(0, 0, 0, 0.2);
  padding-bottom: 20rpx;
  width: 70%;
}

.item-line1 {
  font-size: 35rpx;
  margin: 5rpx 0;
  /* 两行显示 */
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.item-line2 {
  font-size: 26rpx;
  color: #95A4A6;
  margin: 5rpx 0;
}

.item-line3 {
  margin: 5rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 30rpx;
}

.item-line4 {
  margin: 5rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-line4-curPrice {
  color: #E74C3C;
  font-size: 35rpx;
}

.item-line4-price {
  color: #95A4A6;
  font-size: 24rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.item-line5 {
  margin: 5rpx 0;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  color: #95A4A6;
}

.item-comment {
  margin-left: 20rpx;
}

.bottom {
  color: #95A4A6;
  font-size: 24rpx;
}