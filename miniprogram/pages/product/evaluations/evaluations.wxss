/* pages/product/evaluations/evaluations.wxss */

.item {
  width: 95%;
  border: 2rpx solid rgb(0, 0, 0, 0.4);
  border-radius: 20rpx;
  margin: 20rpx 0;
}

.item-line1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 20rpx;
}

.item-avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  border: 1px solid rgb(196, 192, 191);
}

.item-line1-col2 {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.item-line1-col2-score {
  margin-top: 10rpx;
}

.item-line2 {
  margin: 20rpx;
  line-height: 1.5;
}

.item-line3 {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx;
}

.item-pic {
  height: 300rpx;
  width: 300rpx;
  border-radius: 10rpx;
  margin: 5rpx;
}

.item-line4 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
  font-size: 26rpx;
}

.item-line4-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 10rpx;
}

.item-icon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;
}

.bottom {
  margin: 20rpx;
  font-size: 24rpx;
  color: #95A4A6;
}