/* pages/product/evaluation_info/evaluation_info.wxss */

.evaluation-box {
  width: 100%;
  border: 2rpx solid #95A4A6;
  border-radius: 20rpx;
  margin: 20rpx 0;
}

.eva-line1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 20rpx;
}

.eva-avatar {
  height: 100rpx;
  width: 100rpx;
  margin-right: 20rpx;
  border: 2rpx solid #E74C3C;
  border-radius: 100%;
}

.eva-line2 {
  margin: 20rpx 30rpx;
}

.eva-line3 {
  margin: 20rpx 30rpx;
  line-height: 1.5;
}

.eva-line4 {
  margin: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.eva-img {
  height: 300rpx;
  width: 300rpx;
  border-radius: 10rpx;
  margin: 5rpx;
}

.eva-line5 {
  margin: 20rpx 30rpx;
  font-size: 24rpx;
  color: #95A4A6;
}

.comment-box {
  width: 100%;
  margin: 20rpx 0;
  border: 2rpx solid #95A4A6;
  border-radius: 20rpx;
}

.comment-title {
  margin: 20rpx;
  font-weight: bold;
}

.comment-item {
  margin: 20rpx;
}

.comment-line1 {
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment-avatar {
  height: 100rpx;
  width: 100rpx;
  margin-right: 20rpx;
  border-radius: 100%;
}

.comment-line1-col {
  display: flex;
  flex-direction: column;
}

.comment-line1-col-time {
  font-size: 24rpx;
  color: #95A4A6;
  margin-top: 10rpx;
}

.comment-line2 {
  margin: 20rpx 20rpx;
  line-height: 1.5;
}

.comment-line3 {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin: 10rpx 20rpx;
}

.bottom {
  margin-bottom: 120rpx;
  font-size: 24rpx;
  color: #95A4A6;
}

.footer {
  position: fixed;
  bottom: 0;
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #95A4A6;
  height: 90rpx;
  padding-right: 30rpx;
}

.footer-icon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 5rpx;
  margin-left: 20rpx;
}

.footer-input {
  background-color: #e8ecec;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  margin-left: 20rpx;
  flex-grow: 1;
}
