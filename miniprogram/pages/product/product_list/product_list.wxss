/* pages/product/product_list/product_list.wxss */

.search {
  width: 90%;
  margin: 20rpx 0;
}

.main {
  width: 100%;
  /* height: 3000rpx; */
  border-top: 2rpx solid rgb(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.filter-box {
  width: 100%;
  border-bottom: 2rpx solid rgb(0, 0, 0, 0.2);
  padding: 20rpx 30rpx;
}

.tab-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid rgb(0, 0, 0, 0.2);
}

.tab-item {
  padding: 10rpx 0;
}

.tab-item-selected {
  color: #E74C3C;
  border-bottom: 7rpx solid #e7371f;
  padding: 10rpx 0;
}

.show-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.item {
  width: 100%;
  /* height: 400rpx; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgb(0, 0, 0, 0.2);
}

.item-image {
  height: 280rpx;
  width: 250rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-right: 10rpx;
  /* 必须要有，不然box宽度会挤占图片的空间 */
  width: 70%;
}

.item-title {
  font-size: 36rpx;
  /* 两行，多出省略 */
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.item-author {
  font-size: 26rpx;
  margin-top: 10rpx;
}

.item-price {
  font-size: 34rpx;
  margin-top: 70rpx;
  margin-bottom: 10rpx;
}

.item-other {
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 15rpx;
}
