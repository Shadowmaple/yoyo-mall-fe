/* pages/product/product_list/product_list.wxss */

.container {
  border-top: 4rpx solid rgb(0, 0, 0, 0.5);
  padding-top: 10rpx;
}

.search {
  width: 90%;
  margin-bottom: 30rpx;
}

.main {
  width: 92%;
  height: 3000rpx;
  border: 4rpx solid rgb(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.filter-box {
  width: 100%;
  height: 100rpx;
  border-bottom: 4rpx solid rgb(0, 0, 0, 0.2);
}

.tab-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 4rpx solid rgb(0, 0, 0, 0.2);
  padding: 20rpx 0;
}

