/* pages/user/user_info/user_info.wxss */

.avatar-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 200rpx;
}

.avatar-title, .nickname-title {
  margin-left: 50rpx;
  margin-right: 20rpx;
}

.avatar-img {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  border: 1px solid #95A4A6;
}

.nickname-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  margin: 30rpx 0;
}

.nickname-value {
  border: 1px solid #95A4A6;
  border-radius: 10rpx;
  width: 50%;
  padding: 10rpx 20rpx;
}

.confirm-button {
  background-color: #E74C3C;
  color: white;
  width: 200rpx;
  height: 90rpx;
  margin: 20rpx auto;
  font-size: 32rpx;
  border-radius: 10rpx;
}