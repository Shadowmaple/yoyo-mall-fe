/* pages/user/user.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* userInfo */

.userInfo-box {
  height: 300rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  /* transition: all 300ms ease; */
  padding-left: 120rpx;
}

.userInfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  border: 3px solid rgb(0, 153, 255);
  overflow: hidden;
}

.userInfo-nickname {
  font-size: 48rpx;
  color: black;
  background-color: white;
  background-size: cover;
  text-align: left;
  padding-left: 0;
  margin-left: 10px;
}

.userInfo-arrow {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 20rpx;
}

/* order */
.order-box {
  width: 92%;
  height: 170rpx;
  margin: 10rpx 0;
  border: 4rpx solid rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin: 10rpx 10rpx;
}

.order-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
}

/* module */

.module-box {
  width: 92%;
  height: auto;
  margin: 10rpx 0;
  border: 4rpx solid rgba(0, 0, 0, 0.3);
}

.module-item {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

/* 图标 */
.module-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  margin-left: 40rpx;
}

.module-name {
  font-size: 36rpx;
  color: black;
  text-align: left;
  padding-left: 0;
  margin-left: 10px;
}

.module-navigator {
  width: 75%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
