/* pages/category/category.wxss */

.search {
  width: 90%;
}

.main {
  width: 100%;
  height: 1000rpx;
  border-top: 2rpx solid #95A4A6;
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 20rpx;
}

.cate-list {
  border-right: 2rpx solid #95A4A6;
  /* width: 420rpx; */
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.cate-list-item, .cate-list-item-selected {
  padding: 20rpx 20rpx;
  white-space: nowrap;
  border-bottom: 2rpx solid #95A4A6;
  font-size: 28rpx;
  text-align: center;
}

.cate-list-item-selected {
  color: #E74C3C;
  background-color: #eaeff0;
}

.cate-item {
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border: 2rpx solid #95A4A6;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.cate-item-info {
  height: 200rpx;
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 5rpx 5rpx;
  font-size: 28rpx;
}

.cate-item-image {
  height: 130rpx;
  width: 120rpx;
}