<view class="box">
  <!-- 搜素图标 -->
  <icon class="search-icon" type="search" size="20"></icon>
  <input class="input" placeholder="{{text}}" maxlength="20" type="text" confirm-type="search" bindtap="clickClick" value="{{value}}" bindconfirm="bindConfirm" />
  <!-- 清除输入图标 -->
  <icon class="clear-icon" type="clear" size="17" bindtap="clear"></icon>
  <slot></slot>
</view>
